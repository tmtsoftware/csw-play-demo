# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /assembly1/edit             controllers.Assembly1.edit

POST    /assembly1                  controllers.Assembly1.save

GET     /assembly1/:runId/show      controllers.Assembly1.show(runId: String)

GET		/assembly/:runId/status     controllers.Assembly1.status(runId: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
